# ===========================================
# Claude Discord Bot â€” Environment Variables
# ===========================================
# Copy this file to .env and fill in your values.

# --- Required ---

# Discord bot token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Anthropic API key (from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# --- Optional ---

# GitHub personal access token (for issue reading/commenting, repo access)
# Scopes needed: repo, read:org (for private repos), or just public_repo
GITHUB_TOKEN=ghp_your_token_here

# Default GitHub repository (owner/repo format)
# Used when no repo is specified in commands
DEFAULT_GITHUB_REPO=

# Brave Search API key (from brave.com/search/api)
# Required for web search functionality
BRAVE_API_KEY=

# Encryption secret for per-user GitHub token storage (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, a random key is used (tokens lost on restart)
TOKEN_ENCRYPTION_SECRET=

# Bot prefix (how users trigger the bot, besides @mention)
BOT_PREFIX=!claude

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-6-20250514

# Max tokens for Claude responses
MAX_TOKENS=4096

# Max conversation history messages per channel
MAX_HISTORY=50

# Max tool-use iterations per request
MAX_TOOL_ITERATIONS=20
