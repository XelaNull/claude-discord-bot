# Discord Bot Token (required)
DISCORD_TOKEN=your_discord_bot_token_here

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Encryption secret for PAT storage (required for GitHub features)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_SECRET=

# Claude model for main queries (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Claude model for chat mode classifier (default: claude-haiku-4-5-20251001)
CLASSIFIER_MODEL=claude-haiku-4-5-20251001

# Haiku-first: try cheap/fast model for simple questions before Sonnet (default: true)
# HAIKU_FIRST_ENABLED=true
# HAIKU_FIRST_MODEL=claude-haiku-4-5-20251001

# Max tool-use loop iterations (default: 25)
MAX_TOOL_ITERATIONS=25

# Directories (defaults shown)
SCRATCH_DIR=./scratch
WORKSPACE_DIR=./workspaces
DATA_DIR=./data

# Workspace limits
MAX_WORKSPACE_SIZE_MB=1024
WORKSPACE_TTL_DAYS=7

# Conversation limits
MAX_CONVERSATION_MESSAGES=50

# Thread inactivity timeout in milliseconds (default: 15 minutes)
# THREAD_INACTIVITY_MS=900000

# Conversation logging
# MAX_LOG_SIZE_MB=10
# LOG_FLUSH_INTERVAL_MS=2000

# Access Control â€” Discord user ID of the bot owner
# When set, only the owner and explicitly granted users can use the bot
# When unset, all users can use the bot (no restrictions)
OWNER_ID=

# Single-instance lock port (default: 47100)
# Prevents duplicate bot instances across local and Docker
# LOCK_PORT=47100
